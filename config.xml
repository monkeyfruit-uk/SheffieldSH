<?xml version='1.0' encoding='utf-8'?>
<widget id="com.DivaCreative.SheffieldSH.App" version="1.4.0" xmlns:gap = "http://phonegap.com/ns/1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SheffieldSH</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    
    <preference name="auto-hide-splash-screen"    value="true" />
    <preference name="splashscreen" value="splash" />
    <preference name="splashScreenDelay" value="10000" />
    <preference name="orientation" value="portrait" />
    
    <icon src="res/icons/icon-144x144.png" />
    <gap:splash src="splash.png" />

    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.8" />
    <gap:plugin name="org.apache.cordova.device-motion" version="0.2.6" />
    <gap:plugin name="org.apache.cordova.device-orientation" version="0.3.5" />
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.2.4" />

</widget>